{% extends '@!NelmioApiDoc/SwaggerUi/index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Custom back button */
        #custom-back-button {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            background: linear-gradient(135deg, #00ffdd, #00ccaa);
            color: #0a0a0a;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            font-weight: bold;
            font-family: 'Roboto Mono', monospace;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 2px 8px rgba(0, 255, 221, 0.2);
            font-size: 14px;
        }
        
        #custom-back-button:hover {
            background: linear-gradient(135deg, #00ccaa, #009988);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0, 255, 221, 0.4);
            color: #0a0a0a;
            text-decoration: none;
        }
        
        #custom-back-button .back-icon {
            transition: transform 0.3s ease;
        }
        
        #custom-back-button:hover .back-icon {
            transform: translateX(-3px);
        }
        
        @media (max-width: 768px) {
            #custom-back-button {
                padding: 0.6rem 1.2rem;
                font-size: 12px;
                top: 10px;
                right: 10px;
            }
        }
    </style>
{% endblock %}

{% block header_block %}
    <a href="{{ path('app_dashboard') }}" id="custom-back-button">
        <span class="back-icon">‚Üê</span>
        Back to Dashboard
    </a>
    {{ parent() }}
{% endblock %}